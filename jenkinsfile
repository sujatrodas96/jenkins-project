pipeline {
    agent any

    tools {
        maven 'Maven3'   // Name you configured in Jenkins Global Tool Config
        jdk 'JDK17'      // Or JDK21 if you install Java 21
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/sujatrodas96/jenkins-project.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Archive Artifact') {
            steps {
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }

        stage('Run App') {
            steps {
                sh 'java -jar target/jenkins-test-project-1.0-SNAPSHOT.jar'
            }
        }
    }

    post {
        success {
            echo '✅ Build and run completed successfully!'
        }
        failure {
            echo '❌ Build failed. Check logs.'
        }
    }
}

